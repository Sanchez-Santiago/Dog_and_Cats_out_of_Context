---
import type { Movie } from "../lib/movie";
const { videoList } = Astro.props;

let random = Math.floor(Math.random() * videoList.length);
console.log(random);
let video = videoList[random];
---

<div class="video-container">
  <div class="video-item" data-id={video.id}>
    <h2>{video.title}</h2>
    <iframe
      class="video-player"
      width="560"
      height="315"
      src={video.url}
      title={video.title}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen></iframe>
    <p>{video.description}</p>
    <div class="tags">
      {
        /* <p>{video.tags}</p> */
        video.tags.map((tag: string) => {
          return <p class="tag">{tag}</p>;
        })
      }
    </div>
  </div>
</div>

<style>
  .video-container {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
    padding: 2rem;
  }

  .video-item {
    width: 705px;
    background-color: #9b0800;
    padding: 1rem;
    border-radius: 10px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .video-player {
    width: 100%;
    height: 315px;
    border: none;
  }
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    padding: 1rem;
  }
  .tag {
    border-radius: 2rem;
    background-color: #d43a00;
    color: white;
    padding: 0.5rem;
    border-radius: 5px;
  }
</style>
